{
  "name": "store",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/store/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "updateBuildableProjectDepsInPackageJson": false,
        "outputPath": "dist/packages/store",
        "tsConfig": "packages/store/tsconfig.lib.json",
        "project": "packages/store/package.json",
        "entryFile": "packages/store/src/index.ts",
        "format": ["esm", "cjs"],
        "globals": [
          {
            "global": "Rx",
            "moduleId": "rxjs"
          },
          {
            "global": "Rx",
            "moduleId": "rxjs/operators"
          }
        ],
        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "assets": [
          {
            "glob": "README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/store/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/store"],
      "options": {
        "jestConfig": "packages/store/jest.config.ts"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "syncVersions": false
      }
    }
  },
  "tags": []
}
