{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "types": ["inquirer"],
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": ["**/*.ts"],
  "exclude": ["./lib", "**/*.spec.ts"]
}
